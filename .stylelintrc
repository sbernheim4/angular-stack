{
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"block-no-empty": null,
		"color-no-invalid-hex": true,
		"declaration-colon-space-after": "always",
		"indentation": "tab",
		"max-empty-lines": 2,
		"unit-whitelist": ["em", "rem", "%", "s", "px", "vw", "vh"],
		"order/properties-order": ["margin", "margin-top", "margin-right", "margin-bottom", "margin-left", "max-width", "width", "min-width", "max-height", "height", "min-height", "padding", "padding-top", "padding-right", "padding-bottom", "padding-left", "flex", "flex-direction", "justify-content", "align-items", "flex-wrap", "flex"]
	}
}
